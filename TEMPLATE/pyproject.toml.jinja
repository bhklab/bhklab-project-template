[project]
authors = [{ name = "{{ author_full_name }}", email = "{{ author_email }}" }]
maintainers = [
    { name = "{{ author_full_name }}", email = "{{ author_email }}" }
]
dependencies = ["click"]
name = "{{ package_name }}"
requires-python = ">= 3.11"
version = "0.1.0"

[build-system]
build-backend = "hatchling.build"
requires = ["hatchling"]

[project.scripts]
randomstrings = "{{ package_name.replace('-', '_') }}:random_strings"


[tool.hatch.build.targets.wheel]
# Automatically discovers packages in `src/`
packages = ["src/{{ package_name.replace('-', '_') }}"]